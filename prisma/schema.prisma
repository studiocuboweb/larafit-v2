generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  TEACHER
  STUDENT
}

enum WorkoutStatus {
  ACTIVE
  INACTIVE
  DRAFT
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  PIX
  BANK_TRANSFER
}

// Models
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  student  Student?
  teacher  Teacher?

  @@map("users")
}

model Student {
  id          String    @id @default(cuid())
  userId      String    @unique
  phone       String?
  birthDate   DateTime?
  observations String?  @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relações
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  workouts            Workout[]
  payments            Payment[]
  exerciseExecutions  ExerciseExecution[]

  @@map("students")
}

model Teacher {
  id           String   @id @default(cuid())
  userId       String   @unique
  specialties  String[] // Ex: ["Musculação", "Funcional", "CrossFit"]
  cref         String?  // Registro profissional
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relações
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workouts Workout[]

  @@map("teachers")
}

model Workout {
  id          String        @id @default(cuid())
  name        String
  description String?       @db.Text
  studentId   String
  teacherId   String
  status      WorkoutStatus @default(ACTIVE)
  startDate   DateTime      @default(now())
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relações
  student   Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  teacher   Teacher    @relation(fields: [teacherId], references: [id])
  exercises Exercise[]

  @@map("workouts")
}

model Exercise {
  id          String   @id @default(cuid())
  workoutId   String
  name        String
  sets        Int      // Séries
  reps        String   // Repetições (pode ser "12" ou "12-15" ou "até falha")
  rest        Int?     // Descanso em segundos
  weight      String?  // Peso (pode ser "20kg" ou "bodyweight")
  notes       String?  @db.Text
  order       Int      // Ordem do exercício no treino
  groupId     String?  // ID do grupo (biset/triset) - exercícios com mesmo groupId são executados em sequência
  videoUrl    String?  // URL de vídeo explicativo
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relações
  workout    Workout              @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  executions ExerciseExecution[]

  @@map("exercises")
}

model Payment {
  id            String        @id @default(cuid())
  studentId     String
  amount        Float
  dueDate       DateTime
  paymentDate   DateTime?
  status        PaymentStatus @default(PENDING)
  method        PaymentMethod?
  description   String?
  referenceMonth DateTime     // Mês de referência do pagamento
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relações
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model ExerciseExecution {
  id          String   @id @default(cuid())
  exerciseId  String
  studentId   String
  completedAt DateTime @default(now())
  duration    Int      // Duração em segundos
  setsDone    Int      // Quantas séries foram feitas
  notes       String?  @db.Text // Observações do aluno
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relações
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  student  Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("exercise_executions")
}
